{% extends 'base.html.twig' %}

{% block title %}Hello PostsController!{% endblock %}

{% block body %}

    <h1>Posts Index Page</h1>
    <div class="form-group">
        <a href="{{ path('create_post') }}" class="btn btn-primary">Create a new post</a>
    </div>

    <table  class="table">
        <tr>
            <th>Id</th>
            <th>Content</th>
            <th>Action</th>
        </tr>
        {% for post in posts %}
            <tr>
                <th>{{ post.id }}</th>
                <th>{{ post.content }}</th>
                <th>
                    <a href="{{ path('delete_post', {id:post.id}) }}" class="btn btn-danger">Delete</a>
                    <a href="{{ path('show_post', {id:post.id}) }}" class="btn btn-success">Details</a>
                    <a href="{{ path('update_post', {id:post.id}) }}" class="btn btn-primary">Update</a>
                </th>
            </tr>
        {% endfor %}
    </table>
{% endblock %}